<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>My Posts</h1>
    <a href="/create" class="btn btn-primary">New Post</a>
</div>

{{#if error}}
    <div class="alert alert-danger">{{error}}</div>
{{/if}}

{{#if posts}}
    <div class="row">
        {{#each posts}}
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/post/{{id}}" class="text-decoration-none">{{title}}</a>
                        </h5>
                        <p class="card-text">{{substring content 0 150}}{{#if (gt content.length 150)}}...{{/if}}</p>
                        <small class="text-muted">Created on {{formatDate created_at}}</small>
                        <div class="mt-3">
                            <a href="/edit/{{id}}" class="btn btn-sm btn-outline-primary">Edit</a>
                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="deletePost({{id}})">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{else}}
    <div class="alert alert-info">
        You haven't written any posts yet. <a href="/create">Create your first post!</a>
    </div>
{{/if}}

<script>
function deletePost(postId) {
    if (confirm('Are you sure you want to delete this post? This action cannot be undone.')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/delete/' + postId;
        document.body.appendChild(form);
        form.submit();
    }
}
</script>