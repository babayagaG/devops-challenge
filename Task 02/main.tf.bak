terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 6.0"
    }
  }
}

provider "aws" {
  region = "ap-southeast-1"
}

# --- VPC Module ---
module "vpc" {
  source = "./modules/vpc"
}

# --- ECS Module ---
module "ecs" {
  source  = "./modules/ecs"
  vpc_id  = module.vpc.vpc_id
  subnets = module.vpc.public_subnets
  key_name = "terraform-key"
}


output "ecs_instance_id" {
  value = module.ecs.instance_id
}
