<div class="row">
    <div class="col-md-8">
        <article class="card">
            <div class="card-body">
                <h1 class="card-title">{{post.title}}</h1>
                <div class="mb-3">
                    <small class="text-muted">
                        By {{post.username}} on {{formatDate post.created_at}}
                        {{#if (ne post.created_at post.updated_at)}}
                            (Updated on {{formatDate post.updated_at}})
                        {{/if}}
                    </small>
                </div>
                
                <div class="card-text">
                    {{{nl2br post.content}}}
                </div>
                
                {{#if (and user (eq user.id post.user_id))}}
                    <div class="mt-4 d-flex gap-2">
                        <a href="/edit/{{post.id}}" class="btn btn-outline-primary">Edit</a>
                        <button type="button" class="btn btn-outline-danger" onclick="deletePost({{post.id}})">Delete</button>
                    </div>
                {{/if}}
            </div>
        </article>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>About the Author</h5>
            </div>
            <div class="card-body">
                <p><strong>{{post.username}}</strong></p>
                <p class="text-muted">Member since {{formatDate post.created_at}}</p>
            </div>
        </div>
    </div>
</div>

<script>
function deletePost(postId) {
    if (confirm('Are you sure you want to delete this post? This action cannot be undone.')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/delete/' + postId;
        document.body.appendChild(form);
        form.submit();
    }
}
</script>